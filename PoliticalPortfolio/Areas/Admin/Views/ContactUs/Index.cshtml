@model IEnumerable<PoliticalPortfolio.ContactUsTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>All Enquiry<small>( View Enquiry)</small></h1>
</section>
<section class="content">
    <div class="row">
        
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">All Enquiry</h3>
                </div>
                @*<div>

                        @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
                        {
                            <p>
                                <input type="text" id="search" name="search" placeholder="Search By Name Or Phone Number " style="width:300px;margin-left:10px" />
                                <input type="submit" value="Search" />
                            </p>
                        }

                    </div>*@
                <div class="box-body">
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Email Id
                                    </th>
                                    <th>
                                        Contact Number
                                    </th>
                                    <th>
                                        Message
                                    </th>
                                    <th>
                                        Create Date
                                    </th>
                                    <th>
                                        Modified Date
                                    </th>
                                    

                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmailId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Message)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreateDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ModifiedDate)
                                        </td>
                                        

                                    </tr>
                                }

                            </table>
                        </div>
                    }
                    else
                    {
                        <h3 class="box-title">Record Not Found</h3>
                    }

                </div>
            </div>
        </div>
    </div>

</section>