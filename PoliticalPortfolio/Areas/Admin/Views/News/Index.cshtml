@model IEnumerable<PoliticalPortfolio.NewsTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>All News<small>(Add, View, Edit, Delete News)</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12 mb5">
            <a href="/Admin/News/Create/" class="btn btn-dropbox">Add News</a>
        </div>
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">All News</h3>
                </div>
                @*<div>

                        @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
                        {
                            <p>
                                <input type="text" id="search" name="search" placeholder="Search By Name Or Phone Number " style="width:300px;margin-left:10px" />
                                <input type="submit" value="Search" />
                            </p>
                        }

                    </div>*@
                <div class="box-body">
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        Image Path
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Publish Date
                                    </th>
                                    <th>
                                        Create Date
                                    </th>
                                    <th>
                                        Modified Date
                                    </th>
                                  
                                    <th>Action</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    <a href="@item.ImagePath" target="_blank">
                                        <img style="width:100px" class="img-thumbnail" src="@item.ImagePath" />
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PublishDate)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                                </td>
                                
                                <td>
                                    <a class="btn btn-xs btn-warning" href="/admin/News/Edit/@item.Id">Edit <i class="fa fa-edit"></i></a>
                                    <a data-toggle="modal" data-target="#modal-delete-@item.Id" class="btn btn-xs btn-danger">Delete <i class="fa fa-trash-o"></i></a>
                                    <div class="modal fade text-center" id="modal-delete-@item.Id">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    <h4 class="modal-title">News item  Delete Confirmation</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <h4>Are you Sure you want to delete News item</h4>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                    <a class="btn btn-danger pull-right" href="@Url.Action("Delete", "News", new { id = item.Id })">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div><br />

                                </td>
                            </tr>

                                }

                            </table>
                        </div>
                    }
                    else
                    {
                        <h3 class="box-title">Record Not Found</h3>
                    }

                </div>
            </div>
        </div>
    </div>

</section>
