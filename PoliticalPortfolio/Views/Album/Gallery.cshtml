@model IEnumerable<PoliticalPortfolio.GalleryTbl>
@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- start wpo-page-title -->
<section class="wpo-page-title">
    <div class="container">
        <div class="row">
            <div class="col col-xs-12">
                <div class="wpo-breadcumb-wrap">
                    <h2>Gallery</h2>
                    <ol class="wpo-breadcumb-wrap">
                        <li><a href="/">Home</a></li>
                        <li>Gallery</li>
                    </ol>
                </div>
            </div>
        </div> <!-- end row -->
    </div> <!-- end container -->
</section>
<!-- start wpo-portfolio-section -->
<section class="wpo-portfolio-section section-padding" id="gallery">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col col-md-6 col-12">
                <div class="wpo-section-title">
                    <div class="section-titl-shape-1">
                        <svg width="687" height="473" viewBox="0 0 687 473" fill="none">
                            <g opacity="0.44" filter="url(#filter0_f_1_1041)">
                                <circle cx="343.5" cy="129.5" r="129.5" />
                            </g>
                            <defs>
                                <filter id="filter0_f_1_1041" x="0" y="-214" width="687" height="687"
                                        filterUnits="userSpaceOnUse" color-interpolation-filters="sRGB">
                                    <feFlood flood-opacity="0" result="BackgroundImageFix" />
                                    <feBlend mode="normal" in="SourceGraphic" in2="BackgroundImageFix"
                                             result="shape" />
                                    <feGaussianBlur stdDeviation="107" result="effect1_foregroundBlur_1_104" />
                                </filter>
                            </defs>
                        </svg>
                    </div>
                    <div class="section-titl-shape-2">
                        <svg width="687" height="473" viewBox="0 0 687 473" fill="none">
                            <g opacity="0.44" filter="url(#filter0_f_1_1051)">
                                <circle cx="343.5" cy="129.5" r="129.5" />
                            </g>
                            <defs>
                                <filter id="filter0_f_1_1051" x="0" y="-214" width="687" height="687"
                                        filterUnits="userSpaceOnUse" color-interpolation-filters="sRGB">
                                    <feFlood flood-opacity="0" result="BackgroundImageFix" />
                                    <feBlend mode="normal" in="SourceGraphic" in2="BackgroundImageFix"
                                             result="shape" />
                                    <feGaussianBlur stdDeviation="107" result="effect1_foregroundBlur_1_105" />
                                </filter>
                            </defs>
                        </svg>
                    </div>
                    <span>Gallery</span>
                    <h2>
                     Gallery Images
                    </h2>
                </div>
            </div>
        </div>
        <div class="sortable-gallery">
            <div class="gallery-filters"></div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="portfolio-grids gallery-container clearfix">
                        @if (Model.Count() > 0)
                        {
                            foreach (var Albumitem in Model)
                            {
                                <div class="grid">
                                    <div class="img-holder">
                                        <a href="@Albumitem.ImagePath" class="fancybox"
                                           data-fancybox-group="gall-1">
                                            <img src="@Albumitem.ImagePath" class="img img-responsive" style="height:300px;overflow:hidden">
                                            <div class="hover-content">
                                                <i class="ti-plus"></i>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <h3 style="text-align:center">Gallery Images Not Found</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end container -->
</section>
